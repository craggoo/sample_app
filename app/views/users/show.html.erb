<% provide(:title, @User.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @User %>
        <%= @User.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
  	<% if @User.microposts.any? %>
  	<h3>Microposts (<%= @User.microposts.count %>)</h3>
  	<ol class="microposts">
  		<%= render @microposts %>
  	</ol>
  	<%= will_paginate @microposts %>
  	<% end %>
  </div>
</div>